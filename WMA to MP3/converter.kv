<MainInterface>:
    cols: 1
    rows: 3
    Button:
        name: 'search for wma'
        text: 'Convert wma files'
        size_hint: 1, 1
        size: 1, 4
        on_release:root.wma_convert(foundFiles, input)

    TextInput:
        id: input
        pos: 100, 100
        size: 200, 30
        text: "Paste file directory here and press enter."
        multiline: False
        on_text_validate:root.search_button(foundFiles, input)

    ScrollableLabel:
        ScrollView:
            Label:
                padding: 5
                spacing: 5
                pos: 5, 5
                line_height: 1.15
                id: foundFiles
                size_hint_y: None
                height: max(self.texture_size[1], self.parent.height)
                text_size: self.width, None
                canvas.before:
                    Color:
                        rgba: 1, 1, 1, 1
                    Rectangle:
                        pos: self.pos
                        size: self.size
                color: 0,0,0,1